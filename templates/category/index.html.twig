{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
<h1>Toutes les catégories de la table category :</h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
        </div>
  {% else %}
    <p>Il n'y a pas de programme dans la catégorie : {{category.name}} </p>
  {% endfor %}

  <a href="{{path('app_index') }}">
    Retour à l'accueil
  </a>
{% endblock %}